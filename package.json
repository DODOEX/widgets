    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^9.1.7",
    "lerna": "^5.4.0",
    "prettier": "^3.3.3",
    "semantic-release": "24.2.0",
    "semantic-release-monorepo": "^8.0.2"
