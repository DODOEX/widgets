{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "newLine": "CRLF",
    "declaration": true,
    "paths": {
      "@dodoex/api": ["./packages/dodoex-api/src"],
      "@dodoex/api/*": ["./packages/dodoex-api/src/*"],
      "@dodoex/components": ["./packages/dodoex-components/src"],
      "@dodoex/components/*": ["./packages/dodoex-components/src/*"],
      "@dodoex/icons": ["./packages/dodoex-icons/src"],
      "@dodoex/icons/*": ["./packages/dodoex-icons/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["custom.d.ts"]
}
